<div class="header">
    <div class="container">
        <div class="w3layouts_logo">
            <a href="@Url.Action("Main","Main")"><img style="width:200px" src="~/Content/MainLayout/images/LogoWeb1.png" /></a>
        </div>
        <div class="w3_search">
            @using (Html.BeginForm("LayTuKhoaTimKiem", "TimKiem"))
            {
                <input type="text" name="TuKhoa" placeholder="Nhập tên phim cần tìm" required="">
                <input type="submit" value="Tìm kiếm">
            }
        </div>
        <div class="w3l_sign_in_register">
            <ul>
                @{
                    var user = (DAM.Models.TaiKhoan)HttpContext.Current.Session["user"];
                    if (user == null)
                    {
                        <li>
                            <i class="fa fa-phone" aria-hidden="true"></i>0223 345 653
                        </li>
                        <li>
                            @*<a href="#" data-toggle="modal" data-target="#myModal">Login</a>*@
                            @Html.ActionLink("Đăng nhập", "DangNhap", "DangNhapDangKy", null, new { @class = "dangNhapLink" })
                        </li>
                    }
                    else
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="dropdownToggle">
                                @if (user.HinhAnh == null)
                                {
                                    <div id="AnhTK" style=" width:50px; height:50px;">
                                        <img src="~/Content/Image/systemusers_104569.png" style="width: 100%; height: 100%; object-fit: cover; border-radius: 50%;">
                                    </div>
                                }
                                else
                                {
                                    <div id="AnhTK" style=" width:50px; height:50px;">
                                        <img src="@Url.Content("~/Content/TKImages/"+user.HinhAnh)" style="width: 100%; height: 100%; object-fit: cover; border-radius: 50%;">
                                    </div>
                                }
                                <p style="color:black;padding-left:10px;">@user.TenTK</p>
                            </a>
                            <ul class="dropdown-content" role="menu">
                                <li style="padding:0;">
                                    <a class="dropdown-item" href="@Url.Action("TTTaiKhoan","Main", new {TenTK = user.TenTK})"><i class="fa fa-user"></i>Tài khoản</a>
                                </li>
                                <li style="padding:0;">
                                    <a class="dropdown-item" href="@Url.Action("LichSuGiaoDich","Ve",new {TenTK = user.TenTK})"><i class="fa fa-list-ol"></i>Lịch sử giao dịch</a>
                                </li>
                                <li style="padding:0;">
                                    <a class="dropdown-item" href="@Url.Action("DangXuatKH","DangNhapDangKy")"><i class="fa fa-sign-out fa-fw"></i>Đăng xuất</a>
                                </li>
                            </ul>
                        </li>
                    }
                }
            </ul>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>
