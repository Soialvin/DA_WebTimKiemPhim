@using DAM.Models
@model DAM.Models.ViewModel.ChiTietPhimViewModel
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Views/Layout/ThongTinChiTietLayout.cshtml";
}

<div class="col-sm-8 single-left">
    <div class="song">
        <div class="song-info">
            <h3>@Model.TenPhim - Official Trailer</h3>
        </div>
        <div class="video-grid-single-page-agileits">
            <div data-video="@Model.DaTaTrailer" id="video"> <img src="@Url.Content("~/Content/MovieImages/"+Model.HinhAnh)" alt="" class="img-responsive" /> </div>
        </div>
    </div>

    <div class="clearfix"> </div>

    <div class="all-comments">
        <div class="all-comments-info">
            <p style="font-size:20px; font-weight:bold">Thông tin chi tiết</p>
            <div class="agile-info-wthree-box">
                <form>
                    <p class="ttPhim">Tên phim: @Model.TenPhim</p>
                    <p class="ttPhim">Thông tin: @Model.ThongTinPhim</p>
                    <p class="ttPhim">Nội dung: @Model.NoiDung</p>
                    <p class="ttPhim">Thời Lượng: @Model.ThoiLuong</p>
                    <p class="ttPhim">
                        Tên rạp:
                        @for (var i = 0; i < Model.TenTL.Count; i++)
                        {
                            @Model.TenTL[i]
                            if (i < Model.TenTL.Count - 1)
                            {
                                <text>,</text>
                            }
                            else
                            {
                                <text>.</text>
                            }
                        }
                    </p>
                    <p class="ttPhim">
                        Tên rạp:
                        @for (var i = 0; i < Model.TenRap.Count; i++)
                        {
                            @Model.TenRap[i]
                            if (i < Model.TenRap.Count - 1)
                            {
                                <text>,</text>
                            }
                            else
                            {
                                <text>.</text>
                            }
                        }
                    </p>
                    <div class="w3l_sign_in_register" style="float:none; width:100%;">
                        <ul style="width:20%; margin:0 auto;">
                            <li>
                                @Html.ActionLink("Đặt vé ngay", "", "", null, new { @class = "datVeLink" })
                            </li>
                        </ul>
                    </div>
                    <div class="clearfix"> </div>
                </form>
            </div>
        </div>
    </div>
</div>

