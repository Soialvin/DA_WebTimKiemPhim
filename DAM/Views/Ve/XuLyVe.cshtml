@model DAM.Models.ViewModel.HoaDonViewModel

@{
    ViewBag.Title = "XuLyVe";
    Layout = "~/Views/Layout/ThongTinChiTietLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btn_ThanhToan").click(function () {
            swal("Đặt vé thành công")
        });
    });
</script>

<div class="col-sm-8 single-left">
    <h4 style="margin: 0 0 50px 0;" class="latest-text w3_latest_text">Đặt vé</h4>
    <div class="all-comments">
        <div style="" class="all-comments-info">
            <p style="font-size:20px; font-weight:bold">Thông tin chi tiết</p>
            <div class="agile-info-wthree-box">
                @using (Html.BeginForm("XuLyHD", "DatVe", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "purchaseForm", @style = "margin: 0 auto;width: 50%;" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <p class="ttPhim">Tên phim: @Model.TenPhim</p>
                        <p class="ttPhim">Tên rạp: @Model.TenRap</p>
                        <p class="ttPhim">Ghế đã chọn: @string.Join(",", Model.MaGhe)</p>
                        <p class="ttPhim">Khung giờ: @Model.KhungGio</p>
                        <p class="ttPhim">Giá vé: @Model.GiaVe / 1 ghế</p>
                        <p class="ttPhim">Tổng tiền: @Model.TongTien</p>
                        <div class="form-group">
                            <div class="col-md-8">
                                @Html.HiddenFor(model => model.MaPhim)
                                @Html.HiddenFor(model => model.MaRap)
                                @Html.HiddenFor(model => model.MaSC)
                                @for (int i = 0; i < Model.MaGhe.Count; i++)
                                {
                                    @Html.HiddenFor(model => model.MaGhe[i])
                                }
                                @Html.HiddenFor(model => model.TenPhim)
                                @Html.HiddenFor(model => model.TenRap)
                                @Html.HiddenFor(model => model.KhungGio)
                                @Html.HiddenFor(model => model.GiaVe)
                                @Html.HiddenFor(model => model.TongTien)
                                @Html.DropDownList("PPThanhToan", null, "- Chọn phương thức thanh toán -", htmlAttributes: new { @class = "form-control", @id = "dropdownTT", onchange = "showPPTT()" })
                            </div>
                        </div>
                        <input type="submit" style="margin-left: 17%;" id="btn_ThanhToan" value="Thanh toán" disabled class="hoverable" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<style>
    #btn_ThanhToan:disabled {
        pointer-events: none;
    }
</style>
<script>
    function showPPTT() {
        var ThanhToanDropdown = document.getElementById("dropdownTT");
        var ThanhToanButton = document.getElementById("btn_ThanhToan");

        if (ThanhToanDropdown.value != "") {
            ThanhToanButton.disabled = false;
        }
        else {
            ThanhToanButton.disabled = true;
        }

    }
</script>


