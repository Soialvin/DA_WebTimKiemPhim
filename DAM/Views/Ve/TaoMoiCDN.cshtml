    <!-- Script cho việc chọn ghế -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Danh sách các giá trị MaGhe từ ViewModel
            var maGheList = @Html.Raw(Json.Encode(Model.MaGhe));
            // Lấy tất cả các ô đánh dấu ghế
            var seatCheckboxes = document.querySelectorAll('.seats');
            // Lặp qua từng ô đánh dấu
            seatCheckboxes.forEach(function (checkbox) {
                // Kiểm tra xem giá trị của ô đánh dấu có tồn tại trong maGheList hay không
                if (maGheList.includes(checkbox.value)) {
                // Nếu có sự trùng khớp, thêm lớp 'choose' và đặt 'readonly'
                checkbox.classList.add('choose');
                checkbox.setAttribute('readonly', 'readonly');
                }
                // Thêm một trình nghe sự kiện click cho mỗi ô đánh dấu
                checkbox.addEventListener('click', function (event) {
                // Nếu ô đánh dấu có thuộc tính 'readonly', ngăn chặn sự kiện click
                    if (checkbox.hasAttribute('readonly')) {
                    event.preventDefault();
                    }
                    checkSeatSelection();
                });
            });
        });

        function checkSeatSelection() {
            // Lấy tất cả các ô đánh dấu ghế
            var seatCheckboxes = document.querySelectorAll('.seats');
            var isSelected = false;

            // Kiểm tra xem có ghế nào được chọn không
            seatCheckboxes.forEach(function (checkbox) {
                if (checkbox.checked) {
                    isSelected = true;
                }
            });

            // Lấy nút xác nhận chọn ghế
            var confirmButton = document.getElementById('confirmButton');

            // Nếu không có ghế nào được chọn, vô hiệu hóa nút xác nhận
            if (!isSelected) {
                confirmButton.disabled = true;
            } else {
                confirmButton.disabled = false;
            }
        }

        // Gọi hàm kiểm tra ban đầu khi trang được tải
        checkSeatSelection();

        function confirmSelection() {
            // Lấy tất cả các ô đánh dấu ghế
            var seatCheckboxes = document.querySelectorAll('.seats');

            // Tạo một mảng để lưu trữ các ghế được chọn
            var selectedSeats = [];

            // Lặp qua từng ô đánh dấu
            seatCheckboxes.forEach(function (checkbox) {
                // Kiểm tra xem ô đánh dấu có được chọn không
                if (checkbox.checked) {
                    // Thêm giá trị của ô đánh dấu vào mảng
                    selectedSeats.push(checkbox.value);
                }
            });

            // Gán giá trị của mảng vào trường ẩn danh sách ghế
            document.getElementById('selectedSeats').value = selectedSeats.join(',');

            // Gửi biểu mẫu
            document.getElementById('seatSelectionForm').submit();
        }
    </script>
